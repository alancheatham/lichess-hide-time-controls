{
	"manifest_version": 3,
	"name": "Hide Lichess Time Controls",
	"description": "Simple extension to hide time controls",
	"version": "0.0.1",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"action": {
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://lichess.org/*"],
			"css": ["hide-controls.css"]
		}
	]
}
